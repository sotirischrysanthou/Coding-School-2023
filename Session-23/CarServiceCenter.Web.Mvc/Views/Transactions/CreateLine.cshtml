@model CarServiceCenter.Model.TransactionLineCreateDto

@{
    ViewData["Title"] = "CreateLine";
}

<h1>CreateLine</h1>

<h4>TransactionLine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLine">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <div class="form-group">
                <label asp-for="@Model.ServiceTaskId" class="control-label"></label>
                <select asp-for="@Model.ServiceTaskId" class="form-control" asp-items="ViewBag.ServiceTasks"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.EngineerId" class="control-label"></label>
                <select asp-for="@Model.EngineerId" class="form-control" asp-items="ViewBag.Engineers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
